# Harper Rate Limit Plugin - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# Rate Limit Configuration (optional)
# ===========================================
# The rate limit plugin works with defaults and doesn't require secrets.
# These environment variables are optional if you want to customize
# the configuration without modifying config.yaml directly.

# Number of requests allowed per duration window (default: 100)
# RATE_LIMIT_POINTS=100

# Duration window in seconds (default: 60)
# RATE_LIMIT_DURATION=60

# Block duration in seconds when limit exceeded (default: 0, meaning until points restored)
# RATE_LIMIT_BLOCK_DURATION=0

# Key prefix for rate limiter storage (default: rl)
# RATE_LIMIT_KEY_PREFIX=rl

# ===========================================
# Security Configuration (optional)
# ===========================================

# Trust proxy headers (X-Forwarded-For, X-Real-IP) for client identification
# SECURITY WARNING: Only enable if Harper is behind a trusted reverse proxy
# (default: false)
# RATE_LIMIT_TRUST_PROXY=false

# Which IP to use from X-Forwarded-For header when trustProxy is true
# 0 = rightmost (closest proxy), 1 = second from right, etc.
# (default: 0)
# RATE_LIMIT_TRUSTED_PROXY_DEPTH=0
